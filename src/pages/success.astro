---
import Layout from "@/layouts/Layout.astro";
import SocialContact from "@components/SocialContact.astro";
---

<Layout pageName="Contato">
  <div class="contato">
    <h1>Thanks for the message!</h1>
    <p>
      As soon as possible I will contact you. In the meantime, you can find me on the following websites:
    </p>
    <div class="contato__social"><SocialContact /></div>
    <a class="return" href="/"> Back to my portfolio</a>
  </div>
</Layout>

<style lang="scss">
  .contato__social {
    margin-block: var(--space-l);
  }

  p {
    margin-top: var(--space-m);
  }

  .return {
    width: fit-content;
    margin-inline: auto;
    font-size: var(--step-1);
    @include border-button;
  }
</style>
